<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/boder">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:paddingTop="3dp"
            android:paddingLeft="3dp"
            android:id="@+id/Fr_Game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </FrameLayout>
        <!--android:paddingLeft="5dp"
            android:paddingTop="5dp"-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@drawable/boder2">

            <Button
                android:id="@+id/btn_QuickDown"
                android:text="空格"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_Top"
                android:text="上"
                android:layout_above="@+id/btn_QuickDown"
                android:layout_alignLeft="@+id/btn_QuickDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_Down"
                android:text="下"
                android:layout_below="@+id/btn_QuickDown"
                android:layout_alignLeft="@+id/btn_QuickDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_Left"
                android:text="左"
                android:layout_toLeftOf="@+id/btn_QuickDown"
                android:layout_alignTop="@id/btn_QuickDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_Right"
                android:text="右"
                android:layout_toRightOf="@+id/btn_QuickDown"
                android:layout_alignTop="@id/btn_QuickDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/boder">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textColor="#ffff9999"
                    android:text="❂LEVEL❁"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/tv_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textColor="#ffff9999"
                    android:text="4"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textColor="#ffff9999"
                    android:text="✿SCORE❀"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/tv_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textColor="#ffff9999"
                    android:text="10542"
                    android:layout_marginBottom="20dp"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boder">

                <TextView
                    android:layout_margin="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:textSize="20dp"
                    android:textColor="#ffff9999"
                    android:text="@string/next"/>

            </RelativeLayout>

            <FrameLayout
                android:id="@+id/Fr_Next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@drawable/boder">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_Start"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始"/>

                <Button
                    android:id="@+id/btn_Pause"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="暂停"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    
</LinearLayout>